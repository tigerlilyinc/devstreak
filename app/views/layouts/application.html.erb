<!DOCTYPE html>
<html>
  <head>
    <title>Devstreak</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-34869045-1']);
      _gaq.push(['_trackPageview']);

      (function() {
       var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
       ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
       var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
       })();
     </script>
  </head>
  <body class="<%= body_class %>">
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="<%= root_path %>">
            <img src="<%= image_path('sidespin-logo.png') %>" /> codeStreak
          </a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li <%= 'class="active"'.html_safe if body_class.include?("index") %>><a href="<%= root_path %>">Home</a></li>
              <li <%= 'class="active"'.html_safe if body_class.include?("details") %>><a href="<%= details_path %>">Details</a></li>
              <li <%= 'class="active"'.html_safe if body_class.include?("team") %>><a href="<%= team_path %>">Team</a></li>
              <li <%= 'class="active"'.html_safe if body_class.include?("contact") %>><a href="<%= contact_path %>">Contact + FAQ</a></li>
            </ul>
            <a href="<%= apply_path %>" class="btn btn-primary pull-right">Apply Now!</a>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
      <%= yield %>

      <hr>
      <footer>
      <p>&copy; Tigerlily Labs, Inc. 2012 | <a href="<%= participate_path %>">Participate</a></p>
      </footer>
    </div> <!-- /container -->
  </body>
</html>

