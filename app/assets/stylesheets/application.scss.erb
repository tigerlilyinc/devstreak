* {
  margin: 0px;
  padding: 0px;
  font-family: "Din Display Pro Thin", Helvetica, Arial, Verdana, sans-serif;
  font-weight: normal;
  font-size: 14px;
  font-size-adjust: 0.49;
  font-style: normal;
  letter-spacing: 1px;
}

 body {
  padding-top: 60px;
  padding-bottom: 40px;
}

span.label {
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.brand img {
  margin: 0px;
  padding: 0px;
  height: 19px;
}

.shadow {
  -moz-box-shadow: 5px 5px 30px 5px #999;
  -webkit-box-shadow: 5px 5px 30px 5px #999;
}

