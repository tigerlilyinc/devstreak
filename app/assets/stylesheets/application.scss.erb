        position: relative;
        height: 100px;
        width: 100px;

        .ruby-image {
            width:100px;
            height:100px;
            position: absolute;
        }
        .glimmer-1 {
            height: 40px;
            width: 40px;
            position: absolute;
            top: 35px;
            left: 15px;
            -webkit-animation: rubyShine 3s linear .6s infinite alternate;
            -khtml-animation: rubyShine 3s linear .6s infinite alternate;
            -moz-animation: rubyShine 3s linear .6s infinite alternate;
            -ms-animation: rubyShine 3s linear .6s infinite alternate;
            -o-animation: rubyShine 3s linear .6s infinite alternate;
            animation: rubyShine 3s linear .6s infinite alternate;
        }
        .glimmer-2 {
            height: 40px;
            width: 40px;
            position: absolute;
            left: 45px;
            -webkit-animation: rubyShine2 3s linear .6s infinite alternate;
            -khtml-animation: rubyShine2 3s linear .6s infinite alternate;
            -moz-animation: rubyShine2 3s linear .6s infinite alternate;
            -ms-animation: rubyShine2 3s linear .6s infinite alternate;
            -o-animation: rubyShine2 3s linear .6s infinite alternate;
            animation: rubyShine2 3s linear .6s infinite alternate;

        }
    }

    #press {
        -webkit-border-radius: 5px;
        -khtml-border-radius: 5px;
        -moz-border-radius: 5px;
        -ms-border-radius: 5px;
        -o-border-radius: 5px;
        border-radius: 5px;
        margin-top: 40px;
        margin-left: auto;
        margin-right: auto;
        width: 800px;
        padding: 20px;
        padding-bottom: 0px;
        display: block;
        height: 150px;
        border: 2px solid #EEE;
        position: relative;
        text-align: center;

        .pressLogo {
            height: 50px;
            width: 125px;
            display: inline-block;
            padding: 10px;
        }

