        background-position: bottom center;
        background: url("/assets/home/break.png") bottom center no-repeat, -webkit-linear-gradient(top, white, #f5fafd);
        background: url("/assets/home/break.png") bottom center no-repeat, -moz-linear-gradient(top, white, #f5fafd);
