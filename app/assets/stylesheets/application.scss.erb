@font-face {
  font-family: 'Din Display Pro Light';
  src: url('/fonts/207234_0_0.eot');
  src: url('/fonts/207234_0_0.eot?#iefix') format('embedded-opentype');
  src: url('/fonts/207234_0_0.woff') format('woff');
  src: url('/fonts/207234_0_0.ttf') format('truetype');
}

@font-face {
  font-family: 'Din Display Pro Regular';
  src: url('/fonts/207234_1_0.eot');
  src: url('/fonts/207234_1_0.eot?#iefix') format('embedded-opentype');
  src: url('/fonts/207234_1_0.woff') format('woff');
