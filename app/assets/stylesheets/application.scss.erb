* {
    margin: 0px;
    padding: 0px;
}

body {
    padding-top: 60px;
    padding-bottom: 40px;
    color: #474d5a;
    font-family: "promixa-nova", Helvetica, Arial, Verdana, sans-serif;
    font-weight: 300;
    font-size: 14px;
    font-style: normal;
}

.parallax {
    .containing {
        margin-left: 20px;
        margin-right: 20px;
    }
    .text {
        font-size: 17px;
        line-height: 24px;
        color: #888;
    }

    #community {
        display: block;
        width: 100%;
        background-image: url("/assets/break.png");
        background-repeat: no-repeat;
        background-position: bottom center;
        background: url("/assets/break.png") bottom center no-repeat, -webkit-gradient(linear, 50% 0, 50% 100%, color-stop(0%, white), color-stop(100%, #F4F9FD));
        background: url("/assets/break.png") bottom center no-repeat, -webkit-linear-gradient(top, white, #F4F9FD);
        background: url("/assets/break.png") bottom center no-repeat, -moz-linear-gradient(top, white, #F4F9FD);
        background: url("/assets/break.png") bottom center no-repeat, -o-linear-gradient(top, white, #F4F9FD);
        background: url("/assets/break.png") bottom center no-repeat, linear-gradient(top, white, #F4F9FD);

        .text {
            margin-left: 90px;
            margin-top: 95px;
        }

        #desktop {
            background: url("/assets/desktop.png") 0 0 no-repeat;
            width: 452px;
            height: 436px;
            display: block;
            position: relative;
            margin: 30px 50px 1px 0;
            float: right;
        }
    }

    #mentoring {
        background-image: url("/assets/break.png");
        background-repeat: no-repeat;
        background-position: bottom center;
        background: url("/assets/break.png") bottom center no-repeat, -webkit-gradient(linear, 50% 0, 50% 100%, color-stop(0%, white), color-stop(100%, #F4F9FD));
        background: url("/assets/break.png") bottom center no-repeat, -webkit-linear-gradient(top, white, #F4F9FD);
        background: url("/assets/break.png") bottom center no-repeat, -moz-linear-gradient(top, white, #F4F9FD);
        background: url("/assets/break.png") bottom center no-repeat, -o-linear-gradient(top, white, #F4F9FD);
        background: url("/assets/break.png") bottom center no-repeat, linear-gradient(top, white, #F4F9FD);
        overflow: hidden;
        height: 498px;
    }

    #opportunity {
        background-image: url("/assets/break.png");
        background-repeat: no-repeat;
        background-position: bottom center;
        background: url("/assets/break.png") bottom center no-repeat, -webkit-gradient(linear, 50% 0, 50% 100%, color-stop(0%, white), color-stop(100%, #F4F9FD));
        background: url("/assets/break.png") bottom center no-repeat, -webkit-linear-gradient(top, white, #F4F9FD);
        background: url("/assets/break.png") bottom center no-repeat, -moz-linear-gradient(top, white, #F4F9FD);
        background: url("/assets/break.png") bottom center no-repeat, -o-linear-gradient(top, white, #F4F9FD);
        background: url("/assets/break.png") bottom center no-repeat, linear-gradient(top, white, #F4F9FD);
        overflow: hidden;
        height: 498px;
    }
    .row_b {
        width: 940px;
        margin: 0 auto;
        overflow: hidden;
    }
    .column {
        margin-right: 3.8%;
        float: left;
        min-height: 1px;
    }

    .content {
        -webkit-border-radius: 3px;
        -khtml-border-radius: 3px;
        -moz-border-radius: 3px;
        -ms-border-radius: 3px;
        -o-border-radius: 3px;
        border-radius: 3px;
        -webkit-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
        margin-top: 50px;
        margin-bottom: 25px;
        background: yellow;
    }

    .c_fit {
        width: 48%;
    }

    .last {
        margin-right: 0 !important;
    }

    .screenshots {
        margin-top: 30px;
        position: relative;
        display: inline-block;
    }
}


h1, h2, h3, h4, h5, h6, h7 {
    font-family: "cronos-pro-subhead";
    font-weight: 300;
}

span.label {
    font-family: 'promixa-nova', Helvetica, Arial, sans-serif;
}

.brand {
    font-family: "cronos-pro-subhead", Helvetica, Arial, Verdana, sans-serif;
}

.brand img {
    margin: 0px;
    padding: 0px;
    height: 19px;
}

.shadow {
    -moz-box-shadow: 5px 5px 30px 5px #999;
    -webkit-box-shadow: 5px 5px 30px 5px #999;
}

ul.nav li a {
    font-family: 'cronos-pro-subhead', Helvetica, Arial, Verdana, sans-serif;
    font-size: 16px;
}

