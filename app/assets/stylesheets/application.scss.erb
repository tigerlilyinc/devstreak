            }

            p {
                color: rgba(131, 131, 131, 0);
            }
        }
    }

    #banner-graphics {
        width: 950px;
        height: 506px;
        position: absolute;
        right: -130px;
        top: -60px;
        overflow: hidden;
        pointer-events: none;
    }

    #banner-macbook {
        background: url('<%= image_path('home/banner-macbook.png') %>') 0 0 no-repeat;
